.agrc-feedback {
    position: absolute;
    top: 0;
    left: 0;
}
.claro .agrc-feedback .dijitDropDownButton {
    margin: -1px;
}
.claro .agrc-feedback .dijitDropDownButton .dijitButtonNode {
    border-radius: 0;
    -moz-border-radius: 0;
    border-bottom-right-radius: 4px;
    -moz-border-bottom-right-radius: 4px;
    padding: 0 0 3px 0;
}
.claro .agrc-feedback .dijitDropDownButton .dijitButtonNode .dijitButtonText {
    font-size: 0.8em;
}

/*dialog*/
.feedback-dialog-content {
    width: 270px;
}
.feedback-dialog-content p {
    margin-top: 0;
    margin-bottom: 5px;
}
.feedback-dialog-content input {
    width: 266px;
}
.feedback-dialog-content textarea {
    width: 264px;
    height: 100px;
}
.feedback-dialog-content .dijitButton {
    float: right;
    margin: 5px 0 0 0;
}
.feedback-dialog-content .submit-button-container {
    height: 37px;
}
.feedback-dialog-content .msg.error {
    color: red;
}
.feedback-dialog-content .msg {
    width: 195px;
    float: left;
}
.feedback-dialog-content label {
    display: block;
}